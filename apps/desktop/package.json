{
  "name": "@doai/client",
  "version": "0.1.0",
  "private": true,
  "description": "DoAi.Me PC Agent â€” Electron client (config, logging, auto-update)",
  "main": "dist-electron/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dist": "electron-builder --win"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.0",
    "electron-log": "^5.0.1",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "electron": "^33.2.0",
    "electron-builder": "^24.13.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "typescript": "^5.4.0",
    "vite": "^5.4.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "@types/ws": "^8.18.0"
  },
  "build": {
    "appId": "me.doai.agent",
    "productName": "xiaowei",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "dist-electron"
    ],
    "publish": {
      "provider": "github"
    },
    "icon": "build/icon.png",
    "win": {
      "target": [
        "nsis"
      ],
      "executableName": "xiaowei"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "include": "build/installer.nsh"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/exe-blue/DoAi.Me.git"
  }
}