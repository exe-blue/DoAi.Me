{
  "name": "@doai/desktop",
  "version": "1.0.0",
  "private": true,
  "main": "dist-electron/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "tsc -p tsconfig.electron.json && vite build",
    "dist": "pnpm run build && (cd ../../agent && npm ci) && node scripts/download-node-win.js && electron-builder --win",
    "typecheck": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p tsconfig.electron.json",
    "lint": "eslint src/renderer --ext .ts,.tsx"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.3.0",
    "@mui/material": "^6.3.0",
    "electron-log": "^5.2.0",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "adm-zip": "^0.5.16",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "typescript": "^5.6.3",
    "vite": "^6.0.1",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "me.doai.desktop",
    "productName": "xiaowei",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "dist-electron/**"
    ],
    "extraResources": [
      {
        "from": "../../agent",
        "to": "agent",
        "filter": ["**/*", "!.env", "!.env.*", "!.env.prod", "!.env.example"]
      },
      {
        "from": "node-bundle",
        "to": "node"
      }
    ],
    "win": {
      "target": "nsis",
      "executableName": "xiaowei"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installDir": "$PROGRAMFILES32\\xiaowei",
      "include": "build/installer.nsh"
    },
    "npmRebuild": false
  }
}
