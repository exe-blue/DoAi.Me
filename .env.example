# DoAi.Me - Web Application (Next.js)
# 복사 후 .env.local 로 저장: cp .env.example .env.local

# ── Supabase (필수) ──────────────────────────────
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...

# API Routes 전용 (서버에서만 사용, 클라이언트 노출 금지)
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# ── YouTube Data API (채널 동기화용) ─────────────
YOUTUBE_API_KEY=AIza...

# ── Auth0 Authentication (필수) ──────────────────
# 세션 암호화 키: openssl rand -hex 32 명령으로 생성
AUTH0_SECRET=your-generated-secret-here

# Auth0 테넌트 도메인 (scheme 없이)
AUTH0_DOMAIN=example.us.auth0.com

# Auth0 애플리케이션 클라이언트 ID
AUTH0_CLIENT_ID=your-client-id

# Auth0 애플리케이션 클라이언트 시크릿 (서버 전용)
AUTH0_CLIENT_SECRET=your-client-secret

# 애플리케이션 베이스 URL
# 로컬: http://localhost:3000
# 프로덕션: https://doai.me
# Vercel 프리뷰: 생략 가능 (자동 추론)
APP_BASE_URL=http://localhost:3000

# ── Supabase CLI (선택, CI/CD 또는 스키마 검증용) ─
# SUPABASE_ACCESS_TOKEN=sbp_...
