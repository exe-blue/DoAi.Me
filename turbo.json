{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["CI", "HUSKY"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build", "typecheck"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "dist-electron/**", "release/**"],
      "env": [
        "SUPABASE_SERVICE_ROLE_KEY",
        "SUPABASE_SECRET_KEY",
        "SUPABASE_PUBLISHABLE_KEY",
        "YOUTUBE_API_KEY",
        "SENTRY_ORG",
        "SENTRY_PROJECT",
        "SENTRY_AUTH_TOKEN",
        "NEXT_PUBLIC_*"
      ]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": [],
      "env": [
        "SUPABASE_SERVICE_ROLE_KEY",
        "SUPABASE_SECRET_KEY",
        "SUPABASE_PUBLISHABLE_KEY",
        "YOUTUBE_API_KEY",
        "SENTRY_ORG",
        "SENTRY_PROJECT"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": [],
      "env": []
    },
    "test": {
      "outputs": [],
      "env": []
    },
    "dist": {
      "dependsOn": ["build"],
      "cache": false,
      "outputs": ["release/**"],
      "env": []
    }
  }
}
